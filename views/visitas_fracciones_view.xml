<?xml version="1.0"?>
<odoo>
    <!--VISTA DE FORMA-->
    <record id="visitas_fracciones_form_view" model="ir.ui.view">
        <field name="name">visitas.fracciones.form.view</field><!--NOMBRE DE LA VISTA -->
        <field name="model">visitas.cd.fracciones</field><!-- UBICACION Y NOMBRE DEL MODULO -->

        <field name="arch" type="xml">

            <!-- TIPO DE VISTA FORM-->
            <form string="Visitas de supervision">
                <sheet>
                    <div class="alert  alert-primary" align="center" type="role">
                        <h4>
                            <h3>Catálogo de fracciones de la visita</h3>
                        </h4>
                    </div>
                    <group>
                        <group>
                            <field name="fraccion" string="Visitador"/>
                        </group>
                        <group>
                            <field name="estatus"/>
                        </group>
                    </group>



                </sheet>


            </form>
        </field>
    </record>

    <record id="visitas_fracciones_tree_view" model="ir.ui.view">
        <field name="name">visitas.fracciones.tree.view</field><!--NOMBRE DE LA VISTA -->
        <field name="model">visitas.cd.fracciones</field><!-- UBICACION Y NOMBRE DEL MODULO -->

        <field name="arch" type="xml">

            <!-- TIPO DE VISTA FORM-->
            <tree string="Visitas de supervision">
                <field name="fraccion" string="Fracción del articulo 89"/>
            </tree>
        </field>
    </record>
</odoo>